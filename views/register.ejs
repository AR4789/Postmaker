<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Custom gradients for background and button hover */
        .bg-gradient-custom {
            background: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
        }
        .bg-gradient-btn {
            background: linear-gradient(90deg, #FF8A00 0%, #FF3D00 100%);
        }
        .bg-gradient-btn:hover {
            background: linear-gradient(90deg, #FF3D00 0%, #FF8A00 100%);
        }
        .fade-out {
            opacity: 1;
            transition: opacity 1s ease-in-out;
        }

        .fade-out.hidden {
            opacity: 0;
            visibility: hidden;
        }

        .bokeh {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: linear-gradient(to bottom, #3b89f6, #4aa1f3, #3b82f6);
            background-size: 100% 300px;
            background-position: 0% 100%;
        }

        .bokeh-circle {
            position: absolute;
            border-radius: 50%;
            background-color: #ffffff;
            opacity: 0.2;
            animation: bokehAnimation 10s infinite;
        }

        .bokeh-circle-1 {
            top: 20%;
            left: 30%;
            width: 100px;
            height: 100px;
        }

        .bokeh-circle-2 {
            top: 50%;
            left: 50%;
            width: 150px;
            height: 150px;
        }

        .bokeh-circle-3 {
            top: 70%;
            left: 20%;
            width: 200px;
            height: 200px;
        }

        .bokeh-circle-4 {
            top: 10%;
            left: 70%;
            width: 125px;
            height: 125px;
        }

        @keyframes bokehAnimation {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.2);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body class="bokeh h-screen flex items-center justify-center">

    <div >
        <div class="bokeh-circle bokeh-circle-1"></div>
        <div class="bokeh-circle bokeh-circle-2"></div>
        <div class="bokeh-circle bokeh-circle-3"></div>
        <div class="bokeh-circle bokeh-circle-4"></div>

    <div class="w-full max-w-md bg-blue-400 text-white p-10 rounded-lg shadow-lg">
        <h1 class="text-4xl font-bold mb-8 text-center text-yellow-400">Create Account</h1>
        <% if (messages.success) { %>
            <div class="bg-green-500 text-white text-center p-3 mb-5 fade-out rounded-md">
                <%= messages.success %>
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="bg-red-500 text-white text-center p-1 mb-5 fade-out rounded md">
                <%= messages.error %>
            </div>
        <% } %>
        <form action="/register" method="post" class="space-y-5">
            <input class="w-full rounded-lg px-4 py-3 bg-transparent border-2 border-zinc-500 placeholder-gray-500 focus:border-yellow-500 focus:outline-none transition duration-200" 
            type="text" placeholder="Name" name="name" required>
            <input class="w-full rounded-lg px-4 py-3 bg-transparent border-2 border-zinc-500 placeholder-gray-500 focus:border-yellow-500 focus:outline-none transition duration-200" 
                   type="text" placeholder="Username" name="username" required>
            <input class="w-full rounded-lg px-4 py-3 bg-transparent border-2 border-zinc-500 placeholder-gray-500 focus:border-yellow-500 focus:outline-none transition duration-200" 
                   type="password" placeholder="Password" name="password" required>
            <input class="w-full rounded-lg px-4 py-3 bg-transparent border-2 border-zinc-500 placeholder-gray-500 focus:border-yellow-500 focus:outline-none transition duration-200" 
                   type="number" placeholder="Age" name="age" >
            <input class="w-full rounded-lg px-4 py-3 bg-transparent border-2 border-zinc-500 placeholder-gray-500 focus:border-yellow-500 focus:outline-none transition duration-200" 
                   type="text" placeholder="Email" name="email" required>
            <input type="submit" value="Create Account" 
                   class="w-full bg-gradient-btn text-white font-semibold rounded-lg px-4 py-3 cursor-pointer hover:bg-gradient-btn focus:outline-none transition duration-200">
                 
        </form>
        <a href="/" class="text-blue-700 hover:underline mt-4 inline-block ">
            &larr; Back to Login 
        </a>
    </div>

    <script>
           const messageElement = document.querySelector('.fade-out');
    if (messageElement) {
        setTimeout(() => {
            messageElement.classList.add('hidden');
        }, 5000); // 5000 ms = 5 seconds
    }
    </script>
</body>
</html>
